@using System.Security.Claims

@{
	string userRole = ViewBag.UserRole as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Schadensapp</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Schadensapp.styles.css" asp-append-version="true" />

	<style>
		.navbar-custom .navbar-brand,
		.navbar-custom .navbar-text {
			color: white;
		}
	</style>
</head>
<body>
	<header>
		<nav class="navbar navbar-custom navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:rgba(0,34,102,255)">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="UserIndex">
					<img src="~/images/Berliner_Polizei.svg" alt="Logo" style="max-height: 80%; max-width: 80%;" />
					Schadensapp
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="UserIndex">Meldung</a>
						</li>
						@if (userRole == "Admin")
						{
							<li class="nav-item">
								<a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Eingereichte Meldungen</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-white" asp-area="" asp-controller="Bearbeitungsstelle" asp-action="Index">Bearbeitungsstelle</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-white" asp-area="" asp-controller="Dienstleister" asp-action="Index">Dienstleister</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-white" asp-area="" asp-controller="Liegenschaft" asp-action="Index">Liegenschaft</a>
							</li>
						}
						<li class="nav-item">
							<a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Informationen</a>
						</li>
					</ul>
					<p class="nav navbar-text">Hallo, @User.Identity?.Name</p>
				</div>
			</div>
		</nav>
	</header>


	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2023 - Schadensapp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Informationen</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
