@model Schadensapp.Models.MeldungsView
@{
    ViewData["Title"] = "Löschen";
}

<h1>Löschen</h1>

<h3>Sind Sie sicher, dass Sie diese Meldung aus dem System löschen möchten?</h3>

<div>
    <h4>Meldung</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Vorname
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Vorname)
        </dd>
        <dt class="col-sm-2">
            Nachname
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Nachname)
        </dd>
        <dt class="col-sm-2">
            Bereich
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Bereich)
        </dd>
        <dt class="col-sm-2">
            E-Mail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.EMail)
        </dd>
        <dt class="col-sm-2">
            Telefonnummer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Telefon)
        </dd>
        <dt class="col-sm-2">
            Beschreibung
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meldung.Beschreibung)
        </dd>
        <dt class="col-sm-2">
            Eingereicht am
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meldung.DatumUhr)
        </dd>
        <dt class="col-sm-2">
            Gebäudeteil
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meldung.Gebäudeteil)
        </dd>
        <dt class="col-sm-2">
            Raum
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meldung.Raum)
        </dd>
        <dt class="col-sm-2">
            Ebene
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meldung.Ebene)
        </dd>

        @if (Model.Liegenschaftslist != null)
        {
            @foreach (var item in Model.Liegenschaftslist)
            {
                <dt class="col-sm-2">
                    Liegenschaftsname
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.Name)
                </dd>
                <dt class="col-sm-2">
                    Straße
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.Strasse)
                </dd>
                <dt class="col-sm-2">
                    Hausnummer
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.Hausnummer)
                </dd>
                <dt class="col-sm-2">
                    Postleitzahl
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.Postleitzahl)
                </dd>
                <dt class="col-sm-2">
                    Stadt
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.Stadt)
                </dd>
            }
        }

        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meldung.Status)
        </dd>
        <dt class="col-sm-2">
            Dringlichkeit
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meldung.Dringlichkeit)
        </dd>
        <dt class="col-sm-2">
            Anmerkung
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meldung.Anmerkung)
        </dd>
    </dl>
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Meldung.MeldungID" />
        <input type="submit" value="Löschen" class="btn btn-danger" /> |
        <a asp-action="Index">Zurück zur Liste</a>
    </form>
</div>
