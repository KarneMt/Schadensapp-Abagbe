@model Schadensapp.Models.DienstleisterView

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Dienstleister</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Firmenname)
        </dd>
        <dt class = "col-sm-2">
            bteilung
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Abteilung)
        </dd>
        <dt class="col-sm-2">
            Straße
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Strasse)
        </dd>
        <dt class="col-sm-2">
            Hausnummer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hausnummer)
        </dd>
        <dt class="col-sm-2">
            Postleitzahl
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Postleitzahl)
        </dd>
        <dt class="col-sm-2">
            Stadt
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stadt)
        </dd>
        <dt class = "col-sm-2">
            Aktiviert
        </dt>
        <dd class = "col-sm-10">
            @if (Model.IsActive == true)
            {
                <p>Ja</p>
            }
            else
            {
                <p>Nein</p>
            }
        </dd>
        <dt class="col-sm-2">
            E-Mail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EMail)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.DienstleisterID">Bearbeiten</a> |
    <a asp-action="Index">Zurück zur Liste</a>
</div>
