@model Schadensapp.Models.DienstleisterView

@{
    ViewData["Title"] = "Aktivieren";
}

<h1>Aktivieren</h1>

<h3>Sind Sie sicher, dass Sie diesen Dienstleister aktivieren möchten?</h3>
<h2>Nach der Aktivierung kann dieser Dienstleister bei der Erstellung einer Meldung ausgewählt werden.</h2>

<div>
    <h4>Dienstleister</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Firmenname)
        </dd>
        <dt class = "col-sm-2">
            Abteilung
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Abteilung)
        </dd>
        <dt class="col-sm-2">
            Straße
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Strasse)
        </dd>
        <dt class="col-sm-2">
            Hausnummer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hausnummer)
        </dd>
        <dt class="col-sm-2">
            Postleitzahl
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Postleitzahl)
        </dd>
        <dt class="col-sm-2">
            Stadt
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stadt)
        </dd>
        <dt class="col-sm-2">
            E-Mail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EMail)
        </dd>
    </dl>
    
    <form asp-action="Aktivieren">
        <input type="hidden" asp-for="DienstleisterID" />
        <input type="submit" value="Aktivieren" class="btn btn-danger" /> |
        <a asp-action="Index">Zurück zur Liste</a>
    </form>
</div>
