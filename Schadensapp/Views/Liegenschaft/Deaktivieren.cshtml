@model Schadensapp.Models.LiegenschaftsView
@{
    ViewData["Title"] = "Deaktivieren";
}

<h1>Deaktivieren</h1>

<h3>Sind Sie sicher, dass Sie diese Liegenschaft deaktivieren möchten?</h3>
<h2>Nach der Deaktivierung kann diese Liegenschaft bei der Erstellung einer Meldung nicht mehr ausgewählt werden.</h2>
<div>
    <h4>Liegenschaft</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Straße
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Strasse)
        </dd>
        <dt class="col-sm-2">
            Hausnummer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hausnummer)
        </dd>
        <dt class="col-sm-2">
            Postleitzahl
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Postleitzahl)
        </dd>
        <dt class="col-sm-2">
            Stadt
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stadt)
        </dd>
        <dt class="col-sm-2">
            Dienstleister
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DienstleisterFirmenname)
        </dd>
        <dt class="col-sm-2">
            Bearbeitungsstelle
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BearbeitungsstelleName)
        </dd>
    </dl>
    <br />
    <form asp-action="Deaktivieren">
        <input type="hidden" asp-for="LiegenschaftID" />
        <input type="submit" value="Deaktivieren" class="btn btn-danger" /> |
        <a asp-action="Index">Zurück zur Liste</a>
    </form>
</div>
