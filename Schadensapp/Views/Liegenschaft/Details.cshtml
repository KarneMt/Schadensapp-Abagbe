@model Schadensapp.Models.LiegenschaftsView
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Liegenschaft</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Aktiviert
        </dt>
        <dd class = "col-sm-10">
            @if (Model.IsActive == true)
            {
                <p>Ja</p>
            }
            else
            {
                <p>Nein</p>
            }
        </dd>
        <dt class="col-sm-2">
            Straße
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Strasse)
        </dd>
        <dt class="col-sm-2">
            Hausnummer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hausnummer)
        </dd>
        <dt class="col-sm-2">
            Postleitzahl
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Postleitzahl)
        </dd>
         <dt class = "col-sm-2">
            Stadt
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stadt)
        </dd>
        <dt class="col-sm-2">
            Dienstleister
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DienstleisterFirmenname)
        </dd>
         <dt class="col-sm-2">
            Dienstleister-Abteilung
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DienstleisterAbteilung)
        </dd>
        <dt class="col-sm-2">
            Dienstleister Straße
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DienstleisterStrasse)
        </dd>
        <dt class="col-sm-2">
            Dienstleister Hausnummer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DienstleisterHausnummer)
        </dd>
        <dt class="col-sm-2">
            Dienstleister Postleitzahl
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DienstleisterPostleitzahl)
        </dd>
        <dt class="col-sm-2">
            Dienstleister Stadt
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DienstleisterStadt)
        </dd>
         <dt class="col-sm-2">
            Bearbeitungsstelle
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BearbeitungsstelleName)
        </dd>
        <dt class="col-sm-2">
            Bearbeitungsstelle MAP-Gruppe
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BearbeitungsstelleMapGruppe)
        </dd>
        <dt class="col-sm-2">
            Bearbeitungsstelle Telefonnummer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BearbeitungsstelleTelefone)
        </dd>
        <dt class="col-sm-2">
            Bearbeitungsstelle E-Mail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BearbeitungsstelleEMail)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.LiegenschaftID">Bearbeiten</a> |
    <a asp-action="Index">Zurück zur Liste</a>
</div>
