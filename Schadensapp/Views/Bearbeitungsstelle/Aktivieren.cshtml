@model Schadensapp.Models.BearbeitungsstellenView

@{
    ViewData["Title"] = "Aktivieren";
}

<h1>Aktivieren</h1>

<h3>Sind Sie sicher, dass Sie diese Bearbeitungsstelle aktivieren möchten?</h3>
<h2>Nach der Aktivierung kann diese Bearbeitungsstelle bei der Erstellung einer Meldung ausgewählt werden.</h2>

<div>
    <h4>Bearbeitungsstelle</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            MAP-Gruppe
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bearbeitungsstelle.MapGruppe)
        </dd>
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bearbeitungsstelle.Name)
        </dd>
        <dt class = "col-sm-2">
            Telefonnummer
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bearbeitungsstelle.Telefone)
        </dd>
        <dt class = "col-sm-2">
            E-Mail
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bearbeitungsstelle.EMail)
        </dd>
    </dl>
    
    <form asp-action="Aktivieren">
        <input type="hidden" asp-for="Bearbeitungsstelle.BearbeitungsstelleID" />
        <input type="submit" value="Aktivieren" class="btn btn-danger" /> |
        <a asp-action="Index">Zurück zur Liste</a>
    </form>
</div>
